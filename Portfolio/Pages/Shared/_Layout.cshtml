<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/favicon/site.webmanifest">
    <link rel="mask-icon" href="~/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="theme-color" content="#ffffff">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/e1eb7182f7.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preload" href="~/css/fonts.css">
    @* Модалка *@
    <link rel="stylesheet" href="~/css/modal.css">
    <script src="~/js/modal.js" defer></script>
</head>
<body>
    <div class="modalBackground">
        <div class="modalActive">
            <div class="modalClose">
                &#10006;
            </div>
            <div class="modalWindow">
                <form method="post" id="email-post-form" asp-antiforgery="true">
                    <label for="inp-number">Ваш номер:</label>
                    <input name="Info.PhoneNumber" type="tel" class="form-control border-dark" required>
                    <label for="inp-name">Как к вам обращаться:</label>
                    <input name="Info.ClientName" type="text" class="form-control border-dark" required>
                    <label for="inp-name">Контекст будущего разговора:</label>
                    <input name="Info.Description" type="text" class="form-control">
                    <button type="submit" class="btn btn-outline-dark">Заказать звонок</button>
                </form>
            </div>
        </div>
    </div>
    <header>
        <nav>
            <div class="container">
                <div class="nav-container">
                    <ul class="nav-menu">
                        <li><a asp-page="Index" class=@(ViewData["Title"]!.ToString() == "Home" ? "selected_tab" : "unselected_tab")>Главная</a></li>
                        <li><a asp-page="About" class=@(ViewData["Title"]!.ToString() == "About" ? "selected_tab" : "unselected_tab")>Обо мне</a></li>
                    </ul>
                    <ul class="nav-menu">
                        <li><button type="button" class="btn btn-outline-dark trigger">Заказать звонок</button></li>
                        <li><h4>+7 (927) 014-72-58</h4></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="border-top footer">
        <div class="container">
            &copy; Гольдебаев Александр 2023
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>