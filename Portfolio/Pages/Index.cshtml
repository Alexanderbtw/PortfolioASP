@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/flying.css">
    <script src="~/js/carousel.js" defer></script>
    <script src="~/js/popup.js" defer></script>
}

<div id="personal-info">
    <div class="container">
        <h1>Александр Гольдебаев</h1>
        <div id="prof-info">Full-stack web developer</div>
        <a class="btn btn-grad" href="https://taplink.cc/sgoldebaev?from=qr" role="button">Узнать больше</a>
    </div>
    <span id="fly-div" class="fly-word">&lt;div&gt;</span>
    <span id="fly-slash" class="fly-word">&lt;/&gt;</span>
    <span id="fly-slash2" class="fly-word">&lt;/&gt;</span>
    <span id="fly-cs" class="fly-word">C#</span>
    <span id="fly-bracket" class="fly-word">{ }</span>
    <span id="fly-dotnet" class="fly-word">.NET</span>
</div>
<div id="specialization">
    <div class="container">
        <h2>Специализация</h2>
        <div id="spec-container">
            <div class="spec-item">
                <img src="../img/cs-spec.svg" alt="C#">
                Создание веб-приложений на ASP.NET
            </div>
            <div class="spec-item">
                <img src="../img/js-spec.svg" alt="JavaScript">
                Frontend-разработка <br> на JavaScript
            </div>
            <div class="spec-item">
                <img src="../img/adaptive-spec.svg" alt="Adaptive">
                Вёрстка и доработка лендинг-страниц и сайтов любой сложности
            </div>
            <div class="spec-item">
                <img src="../img/db-spec.svg" alt="DataBase">
                Управление и администрирование баз данных
            </div>
        </div>
        <a class="btn btn-grad" href="#" role="button">Прейскурант</a>
    </div>
</div>
<div id="my-works">
    <div class="container">
        <h2>Мои работы</h2>
        <div class="wrapper">
            <i id="left-arrow" class="bi bi-caret-left-fill"></i>
            <div class="carousel">
                <img src="~/img/auth-proj.png" alt="Веб приложение с формами регистрации и входа в личный кабинет" draggable="false">
                <img src="~/img/todo-proj.png" alt="Список задач с возможностью сохранения задач в БД, а также скачивания в формате txt" draggable="false">
                <img src="~/img/exchange-proj.png" alt="Работа с API для получения курса валют" draggable="false">
                <img src="~/img/news-proj.png" alt="Свёрстанный макет сайта для новостного агенства" draggable="false">
            </div>
            <i id="right-arrow" class="bi bi-caret-right-fill"></i>
        </div>
        <a class="btn btn-grad" href="#" role="button">Заказать проект</a>
        <div class="popup-img">
            <span>&times;</span>
            <img src="../img/auth-proj.png" alt="auth-proj">
            <h5>Description</h5>
        </div>
        <span id="fly-div-2" class="fly-word">&lt;div&gt;</span>
        <span id="fly-slash-2" class="fly-word">&lt;/&gt;</span>
        <span id="fly-slash2-2" class="fly-word">&lt;/&gt;</span>
        <span id="fly-cs-2" class="fly-word">C#</span>
        <span id="fly-bracket-2" class="fly-word">{ }</span>
        <span id="fly-dotnet-2" class="fly-word">.NET</span>
    </div>
</div>
